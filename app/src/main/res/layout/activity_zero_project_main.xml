<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ZeroProjectMainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:textColor="#ff028482"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

     <Button
        android:text="SPOTIFYS STREAMER"
        android:id="@+id/spotify_button"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
     />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scores_button"
        android:layout_below="@+id/spotify_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        style="@style/buttonStyle"
        android:onClick="onClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/library_button"
        android:layout_below="@+id/scores_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        style="@style/buttonStyle"
        android:onClick="onClick"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/build_button"
        android:layout_below="@+id/library_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        style="@style/buttonStyle"
        android:onClick="onClick"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyz_button"
        android:layout_below="@+id/build_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        style="@style/buttonStyle"
        android:onClick="onClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE MY OWN APP"
        android:id="@+id/capstone_button"
        android:layout_below="@+id/xyz_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        style="@style/buttonStyle"
        android:background="#ffff1a58"
        android:onClick="onClick"
        />


</RelativeLayout>
